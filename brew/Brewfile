  brew "sf-pwgen" # github.com/anders/pwgen
  brew "tree"
  brew "watch"
end

# internet stuff
brew "dnsmasq", restart_service: :changed if OS.mac?
brew "links"
brew "lynx"
brew "transmission-cli"
brew "youtube-dl" # install w/ pip to get the youtube_dl Python module too.

# documents
