# Spotify
if OS.mac?
  brew "spotifyd", restart_service: :changed
  tap  "rigellute/tap"
  brew "rigellute/tap/spotify-tui"
  tap  "khanhas/tap"
  brew "khanhas/tap/spicetify-cli"
end

# ffmpeg with options
tap  "homebrew-ffmpeg/ffmpeg"
brew "homebrew-ffmpeg/ffmpeg/ffmpeg", args: %w[
  HEAD
  with-fdk-aac
  with-libssh
  with-openh264
  with-openssl
  with-rtmpdump
  with-two-lame
  with-webp
  with-xvid
]

# images
