# -----------------------------------------------------------------------------
# ~/.config/brew/Brewfile
# vim:ft=ruby
# -----------------------------------------------------------------------------

# Instructions:
#   1. Install Homebrew
#   2. `brew tap homebrew/bundle`
#   3. `brew bundle --file=~/.config/brew/Brewfile` [this file]
#   4. `brew bundle --file=~/.local/config/brew/Brewfile` [optional]

# -----------------------------------------------------------------------------
# essentials
# -----------------------------------------------------------------------------

# for Linuxbrew
brew "gcc" if OS.linux?

# for Homebrew
brew "openssl"
brew "curl"
brew "git"

# shells
brew "bash"
brew "fish"

# tmux
brew "tmux"
brew "reattach-to-user-namespace" if OS.mac?

# other
brew "dtrx"
brew "exa"
brew "groff"
brew "jq"
brew "keychain"
brew "less"
brew "ncurses"
brew "source-highlight" # for less
brew "stow"
brew "the_silver_searcher"
brew "vim"
brew "wget"

# -----------------------------------------------------------------------------
# GNU utilities
# -----------------------------------------------------------------------------

if OS.mac?
  brew "coreutils"
  brew "findutils"
  brew "gawk"
  brew "gnu-sed"
  brew "gnu-tar"
  brew "grep"
  brew "parallel"
end

# -----------------------------------------------------------------------------
# text-only browsers
# -----------------------------------------------------------------------------

brew "links"
brew "lynx"

# -----------------------------------------------------------------------------
# ruby
# -----------------------------------------------------------------------------

if OS.mac? && MacOS.version >= "10.6"
  brew "rbenv"
  brew "rbenv-default-gems"
  brew "ruby-build"
  brew "rbenv-bundler"
end

# -----------------------------------------------------------------------------
# other stuff
# -----------------------------------------------------------------------------

if OS.mac?
  brew "man-db"
  brew "rename"
  brew "rsync"
  brew "tree"
  brew "watch"
end

# Dart Sass
tap  "sass/sass"
brew "sass/sass/sass"

# OpenSSH
brew "openssh"
brew "ssh-copy-id"

# text
brew "dos2unix"
brew "multimarkdown"

# pdf
brew "ghostscript"
brew "qpdf"

# fun, games
brew "figlet"
brew "lolcat"
brew "nethack"
brew "screenfetch"

# -----------------------------------------------------------------------------
# casks
# -----------------------------------------------------------------------------

if OS.mac?
  tap "homebrew/cask"

  cask "1password"
  cask "alfred"
  cask "divvy"
  cask "dropbox"
  cask "file-juicer"
  cask "firefox"
  cask "fission"
  cask "flux"
  cask "go2shell"
  cask "grandperspective"
  cask "iterm2"
  cask "mactracker"
  cask "qlcolorcode"
  cask "qlmarkdown"
  cask "qlstephen"
  cask "sublime-text"
  cask "superduper"
  cask "the-unarchiver"
  cask "transmission"
  cask "transmit"
  cask "visual-studio-code"
  cask "vlc"
end
