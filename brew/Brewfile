# -----------------------------------------------------------------------------
# ~/.config/brew/Brewfile
# vim:ft=ruby
# -----------------------------------------------------------------------------

# Instructions:
#   1. Install Homebrew
#   2. `brew tap homebrew/bundle`
#   3. `brew bundle --file=$THIS_FILE`
#   4. `brew bundle --file=~/.local/config/brew/Brewfile` [optional]

# -----------------------------------------------------------------------------
# essentials
# -----------------------------------------------------------------------------

# for Linuxbrew
brew "gcc" if OS.linux?

# for Homebrew
brew "openssl"
brew "curl"
brew "git"

# bash 5
brew "bash"

# tmux
brew "tmux"
brew "reattach-to-user-namespace" if OS.mac?

# other
brew "dtrx"
brew "vim"
brew "less"
brew "ncurses"

# -----------------------------------------------------------------------------
# GNU utilities
# -----------------------------------------------------------------------------

if OS.mac?
  brew "coreutils"

  brew "gawk"
  brew "gnu-tar"

  # parallel
  brew "parallel"

  # find, locate, updatedb, and xargs
  brew "findutils"

  # sed
  brew "gnu-sed"

  # grep
  brew "grep"
end

# -----------------------------------------------------------------------------
# internet stuff
# -----------------------------------------------------------------------------

brew "links"
brew "lynx"
brew "rsync" if OS.mac?
brew "wget"

# -----------------------------------------------------------------------------
# development
# -----------------------------------------------------------------------------

if OS.mac? && MacOS.version >= "10.6"
  brew "rbenv"
  brew "rbenv-default-gems"
  brew "ruby-build"
  brew "rbenv-bundler"
end

brew "jq"

tap  "sass/sass"
brew "sass/sass/sass"

# -----------------------------------------------------------------------------
# other stuff
# -----------------------------------------------------------------------------

brew "exa"
brew "fish"
brew "groff"
brew "keychain"
brew "source-highlight" # for less
brew "stow"
brew "the_silver_searcher"

if OS.mac?
  brew "man-db"
  brew "rename"
  brew "tree"
  brew "watch"
end

# OpenSSH
brew "openssh"
brew "ssh-copy-id"

# text
brew "dos2unix"
brew "multimarkdown"

# pdf
brew "ghostscript"
brew "qpdf"

# fun, games
brew "figlet"
brew "lolcat"
brew "nethack"
