# -----------------------------------------------------------------------------
# ~/.config/brew/Brewfile
# vim:ft=ruby
# -----------------------------------------------------------------------------
# Instructions:
#   1. Install Homebrew
#   2. brew bundle --file=~/.config/brew/Brewfile       # this file
#   3. brew bundle --file=~/.local/config/brew/Brewfile # optional
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# essentials
# -----------------------------------------------------------------------------

# for Linuxbrew
brew "gcc" if OS.linux?

# for Homebrew
brew "curl"
brew "git"

# shells
brew "bash"
brew "fish"

# tmux
brew "tmux"
brew "reattach-to-user-namespace" if OS.mac?

# other
brew "dtrx"
brew "ghostscript"
brew "jq"
brew "keychain"
brew "less"
brew "stow"
brew "the_silver_searcher"
brew "vim"
brew "wget"
brew "multimarkdown"

if OS.mac?
  brew "rename"
  brew "rsync"

  # GNU utilities
  brew "coreutils"
  brew "findutils"
  brew "gawk"
  brew "gnu-sed"
  brew "gnu-tar"
  brew "grep"
  brew "moreutils"
end

# -----------------------------------------------------------------------------
# more
# -----------------------------------------------------------------------------

brew "bat"
brew "dos2unix"
brew "exa"
brew "fd"
brew "hexyl"
brew "jrnl"
brew "links"
brew "lynx"
brew "openssh"
brew "qpdf"
brew "source-highlight" # for less
brew "ssh-copy-id"

if OS.mac?
  brew "tree"
  brew "watch"
end

# fun, games
brew "figlet"
brew "lolcat"
brew "nethack"
brew "screenfetch"
tap  "zgracem/fortune-clean"
brew "zgracem/fortune-clean/fortune"

# -----------------------------------------------------------------------------
# development stuff
# -----------------------------------------------------------------------------

brew "groff"
brew "help2man"
brew "ncurses"

if OS.mac?
  tap  "alhadis/troff"
  brew "alhadis/troff/man-db"
  brew "spotifyd"
  brew "spotify-tui"
end

# ruby
if OS.mac? && MacOS.version >= "10.6"
  brew "rbenv"
  brew "rbenv-default-gems"
  brew "ruby-build"
  brew "rbenv-bundler"
end

# Dart Sass
tap  "sass/sass"
brew "sass/sass/sass"
