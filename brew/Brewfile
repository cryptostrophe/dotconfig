tap "homebrew/command-not-found"
tap "homebrew/services"
tap "zgracem/caveats"

# -----------------------------------------------------------------------------
# essentials
# -----------------------------------------------------------------------------

# for Linuxbrew
brew "gcc" if OS.linux?

# for Homebrew
brew "curl"
brew "git"

# shells
brew "bash"
brew "fish"

# tmux
brew "tmux"
brew "reattach-to-user-namespace" if OS.mac?

# other
brew "dtrx"
brew "jq"
brew "keychain"
brew "less"
brew "stow"
brew "the_silver_searcher"
brew "vim"
brew "wget"

if OS.mac?
  brew "rename"
  brew "rsync"

  # GNU utilities
  brew "coreutils"
  brew "diffutils"
  brew "findutils"
  brew "gawk"
  brew "gnu-sed"
  brew "gnu-tar"
  brew "grep"
  brew "moreutils"
end

